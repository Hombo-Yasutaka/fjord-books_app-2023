<%= form_with(model: comment, url: polymorphic_url([comment.imageable, comment])) do |form| %>
  <% if comment.errors.any? %>
    <div style="color: red">
      <h2><%= t('views.common.validation_error', errors: i18n_error_count(comment.errors.count), name: Comment.model_name.human.downcase) %>:</h2>

      <ul>
        <% comment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :content, style: "display: block" %>
    <%= form.text_field :content %>
  </div>

  <%= form.hidden_field :owner, value: comment.owner %> 

  <div>
    <%= form.submit %>
  </div>
<% end %>
