<h1><%= t('views.common.title_show', name: Report.model_name.human) %></h1>

<div class="show-item">
  <%= render @report %>
</div>

<nav class="page-nav">
  <% if current_user.id == @report.owner %>
    <%= link_to t('views.common.edit', name: Report.model_name.human.downcase), edit_report_path(@report) %> |
  <% end %>
  <%= link_to t('views.common.back', name: i18n_pluralize(Report.model_name.human.downcase)), reports_path %>
  <%= link_to "コメントする", new_report_comment_path(@report) %>
  <% if current_user.id == @report.owner %>
    <%= button_to t('views.common.destroy', name: Report.model_name.human.downcase), @report, method: :delete %>
  <% end %>

</nav>

<div id="comments" class="index-items">
  <% @comments.each do |comment| %>
    <div class="index-item">
      <%= render comment %>
      <% if current_user.id == comment.owner %>
        <%= button_to t('views.common.destroy', name: Comment.model_name.human.downcase), report_comment_path(@report.id, comment.id), method: :delete %>
      <% end %>
    </div>
  <% end %>
</div>
